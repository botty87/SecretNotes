<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <data>
        <variable
            name="settings"
            type="com.botty.secretnotes.settings.SettingsContainer" />

        <variable
            name="autoLock"
            type="Boolean" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/settingsCoordLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".settings.SettingsActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="#24b3e5fc"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"
                tools:targetApi="m" />

            <ScrollView
                android:id="@+id/layoutSettingsFields"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:clipToPadding="false"
                android:fillViewport="true"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:scrollbars="none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/settings_group_fields_background"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/sort_notes"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:minHeight="40dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/settings_radiobutton_background"
                                android:button="@null"
                                android:checked="@={settings.alphabetSort}"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/alphabet"
                                android:textColor="@color/settings_radiobutton_textcolor"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/settings_radiobutton_background"
                                android:button="@null"
                                android:checked="@{!settings.alphabetSort}"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/last_modify"
                                android:textColor="@color/settings_radiobutton_textcolor"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/settings_group_fields_background"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/and_ordered"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:minHeight="60dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/settings_radiobutton_background"
                                android:button="@null"
                                android:checked="@={settings.ascendingSort}"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/asc_order"
                                android:textColor="@color/settings_radiobutton_textcolor"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/settings_radiobutton_background"
                                android:button="@null"
                                android:checked="@{!settings.ascendingSort}"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/desc_order"
                                android:textColor="@color/settings_radiobutton_textcolor"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/settings_group_fields_background"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/when_no_categories_is_selected"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:minHeight="60dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/settings_radiobutton_background"
                                android:button="@null"
                                android:checked="@={settings.showNoCategoriesNotes}"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/show_no_categories_note"
                                android:textColor="@color/settings_radiobutton_textcolor"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/settings_radiobutton_background"
                                android:button="@null"
                                android:checked="@{!settings.showNoCategoriesNotes}"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/show_all_notes"
                                android:textColor="@color/settings_radiobutton_textcolor"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/settings_group_fields_background"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/automatic_note_saves"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:minHeight="60dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/settings_radiobutton_background"
                                android:button="@null"
                                android:checked="@={settings.noteAutoSave}"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/no_save_button_message"
                                android:textColor="@color/settings_radiobutton_textcolor"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/settings_radiobutton_background"
                                android:button="@null"
                                android:checked="@{!settings.noteAutoSave}"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/save_button_message"
                                android:textColor="@color/settings_radiobutton_textcolor"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/settings_group_fields_background"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/dispose_notes"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:minHeight="60dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/settings_radiobutton_background"
                                android:button="@null"
                                android:checked="@={settings.oneColumn}"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/one_column_dispose"
                                android:textColor="@color/settings_radiobutton_textcolor"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/settings_radiobutton_background"
                                android:button="@null"
                                android:checked="@{!settings.oneColumn}"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/two_column_dispose"
                                android:textColor="@color/settings_radiobutton_textcolor"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/settings_group_fields_background"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/master_password"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:minHeight="60dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <Button
                                android:id="@+id/buttonMasterPassword"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:text="@string/set_new_master_password" />

                            <CheckBox
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/settings_radiobutton_background"
                                android:button="@null"
                                android:checked="@={autoLock}"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@{autoLock ? @string/autolock : @string/no_autolock}"
                                android:textColor="@color/settings_radiobutton_textcolor"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                        </LinearLayout>

                    </LinearLayout>

                    <ViewStub
                        android:id="@+id/viewStubUserAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout="@layout/layout_settings_user_account" />

                    <Button
                        android:id="@+id/buttonSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="@color/primary"
                        android:drawableRight="@drawable/ic_check_24dp"
                        android:drawablePadding="7dp"
                        android:padding="10dp"
                        android:text="@string/save"
                        android:textSize="16sp"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>